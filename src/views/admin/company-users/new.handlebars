{{#section "title"}}
  <title>ユーザー登録</title>
{{/section}}
{{#section "css"}}
  <link rel="stylesheet" href="/public/css/admin-crud.css">
{{/section}}

<section class="admin-form">
  <div class="page-title">
    <h1>{{title}}</h1>
    <a class="btn-subtle" href="/admin/companies/{{company.id}}/users">← 戻る</a>
  </div>

  <form method="post" action="/admin/companies/{{company.id}}/users">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <p class="muted">所属会社：<b>{{company.name}}</b></p>

    <label>氏名 <input type="text" name="name" required></label>
    <label>メール <input type="email" name="email" required></label>

    <label>パスワード
      <input type="password" name="password" autocomplete="new-password" required minlength="8" maxlength="72">
    </label>
    <label>パスワード（確認）
      <input type="password" name="password_confirm" autocomplete="new-password" required minlength="8" maxlength="72">
    </label>

    <label>ロール
      <select name="role" required>
        <option value="member">member</option>
        <option value="manager">manager</option>
        <option value="admin">admin</option>
      </select>
    </label>

    <label class="inline">
      <input type="checkbox" name="is_active" value="1" checked> 有効にする
    </label>

    <div class="form-actions">
      <button type="submit" class="btn">登録</button>
      <a href="/admin/companies/{{company.id}}/users" class="btn-subtle">戻る</a>
    </div>
  </form>
</section>
